apiVersion: v1
kind: ConfigMap
metadata:
  name: nginx-config
data:
  toto.txt: |
    # Contenu de ton fichier
    server {
        listen 80;
        server_name example.com;
    }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:latest
          volumeMounts:
            - name: config-volume
              mountPath: /etc/nginx/conf.d/toto.txt
              subPath: toto.txt
      volumes:
        - name: config-volume
          configMap:
            name: nginx-config
