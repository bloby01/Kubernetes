# Dockerfile pour l'application d'exemple Go
# 
# Build:
#   docker build -t metrics-app:1.0 .
# 
# Run:
#   docker run -p 8080:8080 metrics-app:1.0

# Stage 1: Build
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copier go.mod et go.sum (à créer)
COPY go.mod go.sum ./
RUN go mod download

# Copier le code source
COPY main.go ./

# Build l'application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o metrics-app .

# Stage 2: Runtime
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copier le binaire depuis le builder
COPY --from=builder /app/metrics-app .

# Exposer le port
EXPOSE 8080

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Utilisateur non-root
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

USER appuser

# Commande de démarrage
CMD ["./metrics-app"]
